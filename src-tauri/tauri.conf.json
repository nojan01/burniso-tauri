{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BurnISO to USB",
  "version": "1.3.1",
  "identifier": "com.burniso.usb",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BurnISO to USB",
        "width": 900,
        "height": 900,
        "minWidth": 700,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "devtools": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "category": "public.app-category.utilities",
    "shortDescription": "ISO to USB Brenner und USB Backup Tool",
    "longDescription": "Ein einfaches Tool zum Brennen von ISO-Images auf USB-Sticks und zum Erstellen von USB-Backups unter macOS."
  },
  "plugins": {}
}
